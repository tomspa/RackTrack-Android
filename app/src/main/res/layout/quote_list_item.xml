<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/quoteTextView"
        android:layout_width="@dimen/quote_list_item_width"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/quote_list_item_margin_end"
        android:layout_weight="1"
        android:text="@string/quote_list_item_textview_default" />

    <Button
        android:id="@+id/edit_quoteItem_button"
        android:layout_width="@dimen/quote_list_item_edit_button_width"
        android:layout_height="@dimen/quote_list_item_edit_button_height"
        android:layout_weight="0"
        android:backgroundTint="@color/main"
        android:text="@string/quote_list_item_edit_button_text"
        android:textSize="@dimen/quote_list_item_edit_button_text_size" />
</LinearLayout>